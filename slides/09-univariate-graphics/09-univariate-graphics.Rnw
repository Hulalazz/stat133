\begin{frame}
\frametitle{Box plots based on 5-number summary}

\bb{5 summary indicators}
\pause
\begin{enumerate}
  \item minimum
  \item 25th percentile (1st quartile)
  \item 50th percentile (2nd quartile, or median)
  \item 75th percentile (3rd quartile)
  \item maximum
\end{enumerate}
\eb

\end{frame}

