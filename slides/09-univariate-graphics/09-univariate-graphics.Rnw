      lwd = 4, col = "gray70")
points(hb1$breaks, y=c(0,cum_rfreq1[-length(hb1$breaks)]), 
       pch=19, col="gray30", cex=0.8)
text(hb1$breaks, y=c(0,cum_rfreq1[-length(hb1$breaks)]), 
     pos=3, cex=0.8,
     labels = paste(c(0, cum_rfreq1), "%", sep=""))
par(op)
@

\end{frame}

