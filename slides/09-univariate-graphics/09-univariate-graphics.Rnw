hb1 = hist(b1, col = "gray90", border = "gray50",
           xlab = "", main = "Histogram 1")
plot(hb1$breaks, y=c(0,cum_rfreq1), axes = FALSE, 
     xlab = "", ylab="", ylim = c(0,108), main = "Ogive 1")
