\begin{frame}[fragile]
\frametitle{For Loops}

\begin{columns}[t]
\begin{column}{0.45\textwidth}
For loop
<<>>=
# squaring values
x <- 1:5
y <- x

for (i in 1:5) {
  y[i] <- x[i]^2
}

y
@
\end{column}

\begin{column}{0.45\textwidth}
Vectorized computation
<<>>=
